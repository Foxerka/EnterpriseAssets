<Page x:Class="EnterpriseAssets.View.Pages.WarehousePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EnterpriseAssets.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="WarehousePage"
      Background="#F5F7FA"
      Loaded="Page_Loaded">

    <Grid Margin="20">
        <!-- 🔧 Исправленная структура строк -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 0: Заголовок -->
            <RowDefinition Height="Auto"/>
            <!-- 1: Панель управления (поиск + кнопки) -->
            <RowDefinition Height="*"/>
            <!-- 2: Список цехов (занимает всё свободное место) -->
            <RowDefinition Height="Auto"/>
            <!-- 3: Статистика -->
        </Grid.RowDefinitions>

        <!-- 🔹 Заголовок -->
        <TextBlock Grid.Row="0"
                   Text="Управление цехами" 
                   FontSize="28" 
                   FontWeight="SemiBold" 
                   Foreground="#2C3E50"
                   Margin="0,0,0,15"/>

        <!-- 🔹 Панель управления: Поиск (слева) + Кнопки (справа) -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- Поиск занимает доступное место -->
                <ColumnDefinition Width="Auto"/>
                <!-- Кнопки по содержимому -->
            </Grid.ColumnDefinitions>

            <!-- 🔸 Поиск (слева) -->
            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Center">
                <TextBlock Text="🔍 Поиск:" 
                           Foreground="#7F8C8D" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"
                           FontWeight="Medium"/>
                <TextBox x:Name="TxtSearch" 
                         Width="300"
                         Padding="10,6"
                         TextChanged="TxtSearch_TextChanged"
                         BorderBrush="#BDC3C7"
                         BorderThickness="1"
                         Background="White"
                         VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- 🔸 Кнопки (справа) -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="BtnAddWorkshop" 
                        Content="➕ Добавить цех" 
                        Background="#4A6FA5"
                        Foreground="White"
                        Padding="15,8"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,10,0"
                        Click="BtnAddWorkshop_Click"
                        FontWeight="Medium"/>

                <Button x:Name="BtnRefresh" 
                        Content="🔄 Обновить" 
                        Background="#95A5A6"
                        Foreground="White"
                        Padding="15,8"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BtnRefresh_Click"
                        FontWeight="Medium"/>
            </StackPanel>
        </Grid>

        <!-- 🔹 Список цехов (занимает всё доступное пространство) -->
        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="0,0,0,15">
            <ItemsControl x:Name="WorkshopsList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Карточка цеха -->
                        <Border Background="White"
                                BorderBrush="#E1E5EB"
                                BorderThickness="1"
                                CornerRadius="8"
                                Margin="0,0,0,10"
                                Padding="15"
                                Cursor="Hand"
                                MouseLeftButtonUp="WorkshopCard_Click"
                                Tag="{Binding Id}">

                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.1"/>
                            </Border.Effect>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Иконка цеха -->
                                <Border Grid.Column="0"
                                        Width="50" Height="50"
                                        CornerRadius="25"
                                        Background="#4A6FA5"
                                        Margin="0,0,15,0">
                                    <TextBlock Text="🏭" 
                                               FontSize="24"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>

                                <!-- Информация о цехе -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" 
                                               FontSize="16" 
                                               FontWeight="SemiBold" 
                                               Foreground="#2C3E50"/>

                                    <WrapPanel Margin="0,5,0,0">
                                        <TextBlock Text="📍" Foreground="#95A5A6" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding Location}" 
                                                   Foreground="#5D6D7E" 
                                                   FontSize="12"
                                                   Margin="0,0,15,0"/>

                                        <TextBlock Text="👤" Foreground="#95A5A6" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding ManagerName}" 
                                                   Foreground="#5D6D7E" 
                                                   FontSize="12"
                                                   FontWeight="{Binding ManagerWeight}"/>
                                    </WrapPanel>
                                </StackPanel>

                                <!-- Кнопки действий -->
                                <StackPanel Grid.Column="2" 
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                    <Button Content="✏️" 
                                            ToolTip="Редактировать"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            FontSize="18"
                                            Margin="5,0"
                                            Click="EditWorkshop_Click"
                                            Tag="{Binding Id}"/>

                                    <Button Content="🗑️" 
                                            ToolTip="Удалить"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            FontSize="18"
                                            Margin="5,0"
                                            Click="DeleteWorkshop_Click"
                                            Tag="{Binding Id}"
                                            Foreground="#E74C3C"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- 🔹 Статистика -->
        <Border Grid.Row="3" 
                Background="#F8F9FA" 
                Padding="12,10" 
                CornerRadius="6"
                BorderBrush="#E1E5EB"
                BorderThickness="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Всего цехов: " Foreground="#7F8C8D" VerticalAlignment="Center"/>
                <TextBlock x:Name="TotalCount" Text="0" Foreground="#2C3E50" FontWeight="SemiBold" Margin="0,0,20,0"/>
                <TextBlock Text="С менеджером: " Foreground="#7F8C8D" VerticalAlignment="Center"/>
                <TextBlock x:Name="WithManagerCount" Text="0" Foreground="#27AE60" FontWeight="SemiBold"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>