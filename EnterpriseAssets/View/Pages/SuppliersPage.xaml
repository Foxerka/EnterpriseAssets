<Page x:Class="EnterpriseAssets.View.Pages.SuppliersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EnterpriseAssets.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="SuppliersPage"
      Background="#F5F7FA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Управление поставщиками" 
                   FontSize="28" 
                   FontWeight="SemiBold" 
                   Foreground="#2C3E50"
                   Margin="0,0,0,20"/>

        <!-- Панель инструментов -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,15">
            <Button x:Name="BtnAddSupplier" 
                    Content="➕ Добавить поставщика" 
                    Background="#4A6FA5"
                    Foreground="White"
                    Padding="15,8"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,10,0"
                    Click="BtnAddSupplier_Click"/>

            <Button x:Name="BtnRefresh" 
                    Content="🔄 Обновить" 
                    Background="#95A5A6"
                    Foreground="White"
                    Padding="15,8"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnRefresh_Click"/>
        </StackPanel>

        <!-- Панель фильтрации -->
        <Border Grid.Row="1" 
                Background="White"
                BorderBrush="#E1E5EB"
                BorderThickness="1"
                CornerRadius="6"
                Padding="15"
                Margin="0,0,0,15">
            <StackPanel>
                <WrapPanel Margin="0,0,0,10">
                    <TextBlock Text="Фильтр:" Foreground="#7F8C8D" VerticalAlignment="Center" Margin="0,0,10,0"/>

                    <RadioButton x:Name="FilterAll" 
                                 Content="Все поставщики" 
                                 GroupName="SupplierFilter" 
                                 IsChecked="True"
                                 Foreground="#2C3E50"
                                 Margin="0,0,20,0"
                                 Checked="FilterSuppliers"/>

                    <RadioButton x:Name="FilterActive" 
                                 Content="Активные" 
                                 GroupName="SupplierFilter" 
                                 Foreground="#27AE60"
                                 Margin="0,0,20,0"
                                 Checked="FilterSuppliers"/>

                    <RadioButton x:Name="FilterInactive" 
                                 Content="Неактивные" 
                                 GroupName="SupplierFilter" 
                                 Foreground="#E74C3C"
                                 Margin="0,0,20,0"
                                 Checked="FilterSuppliers"/>

                    <TextBlock Text="Поиск:" Foreground="#7F8C8D" VerticalAlignment="Center" Margin="20,0,10,0"/>
                    <TextBox x:Name="TxtSearch" 
                             Width="200"
                             Padding="5"
                             TextChanged="TxtSearch_TextChanged"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- Список поставщиков -->
        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="0,0,0,15">
            <ItemsControl x:Name="SuppliersList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Карточка поставщика -->
                        <Border Background="White"
                                BorderBrush="{Binding StatusBorderColor}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Margin="0,0,0,10"
                                Padding="15"
                                Cursor="Hand"
                                MouseLeftButtonUp="SupplierCard_Click"
                                Tag="{Binding id}">

                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.1"/>
                            </Border.Effect>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Иконка/аватар компании -->
                                <Border Grid.Column="0"
                                        Width="50" Height="50"
                                        CornerRadius="25"
                                        Background="{Binding StatusColor}"
                                        BorderBrush="#E1E5EB"
                                        BorderThickness="1"
                                        Margin="0,0,15,0">
                                    <TextBlock Text="🏢" 
                                               FontSize="24"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>

                                <!-- Информация о поставщике -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding name}" 
                                                   FontSize="16" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#2C3E50"
                                                   Margin="0,0,10,0"/>
                                        <Border Background="{Binding StatusColor}"
                                                CornerRadius="4"
                                                Padding="8,3"
                                                Visibility="{Binding StatusVisibility}">
                                            <TextBlock Text="{Binding StatusText}" 
                                                       Foreground="White" 
                                                       FontSize="10"
                                                       FontWeight="SemiBold"/>
                                        </Border>
                                    </StackPanel>

                                    <WrapPanel Margin="0,5,0,0">
                                        <TextBlock Text="👤" Foreground="#95A5A6" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding contact_person}" 
                                                   Foreground="#5D6D7E" 
                                                   FontSize="12"
                                                   Margin="0,0,15,0"/>

                                        <TextBlock Text="📧" Foreground="#95A5A6" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding email}" 
                                                   Foreground="#5D6D7E" 
                                                   FontSize="12"
                                                   Margin="0,0,15,0"/>

                                        <TextBlock Text="📞" Foreground="#95A5A6" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding phone}" 
                                                   Foreground="#5D6D7E" 
                                                   FontSize="12"/>
                                    </WrapPanel>

                                    <WrapPanel Margin="0,5,0,0">
                                        <TextBlock Text="📍" Foreground="#95A5A6" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding address}" 
                                                   Foreground="#5D6D7E" 
                                                   FontSize="12"
                                                   TextWrapping="Wrap"
                                                   MaxWidth="400"/>

                                        <TextBlock Text="🔖" Foreground="#95A5A6" Margin="15,0,5,0"/>
                                        <TextBlock Text="{Binding tax_number}" 
                                                   Foreground="#5D6D7E" 
                                                   FontSize="12"/>
                                    </WrapPanel>
                                </StackPanel>

                                <!-- Кнопки быстрых действий -->
                                <StackPanel Grid.Column="2" 
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                    <Button Content="✏️" 
                                            ToolTip="Редактировать"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            FontSize="18"
                                            Margin="5,0"
                                            Click="EditSupplier_Click"
                                            Tag="{Binding id}"/>

                                    <Button Content="{Binding ToggleIcon}" 
                                            ToolTip="{Binding ToggleTooltip}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            FontSize="18"
                                            Margin="5,0"
                                            Click="ToggleStatus_Click"
                                            Tag="{Binding id}"
                                            Foreground="{Binding ToggleColor}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Статистика -->
        <Border Grid.Row="3" 
                Background="#F8F9FA" 
                Padding="15" 
                CornerRadius="4">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Всего поставщиков: " Foreground="#7F8C8D"/>
                <TextBlock x:Name="TotalCount" Text="0" Foreground="#2C3E50" FontWeight="SemiBold" Margin="0,0,20,0"/>
                <TextBlock Text="Активных: " Foreground="#7F8C8D"/>
                <TextBlock x:Name="ActiveCount" Text="0" Foreground="#27AE60" FontWeight="SemiBold"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>