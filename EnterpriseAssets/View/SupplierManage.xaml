<Window x:Class="EnterpriseAssets.View.SupplierManage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnterpriseAssets.View"
        mc:Ignorable="d"
        Title="Управление поставщиком" 
        Height="550" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F7FA"
        WindowStyle="SingleBorderWindow">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="White"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Иконка -->
                <Border Grid.Column="0"
                        Width="60" Height="60"
                        CornerRadius="30"
                        Background="#4A6FA5"
                        Margin="0,0,15,0">
                    <TextBlock Text="🏢" 
                               FontSize="30"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <!-- Информация -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="SupplierName" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="#2C3E50"/>
                    <TextBlock x:Name="SupplierStatus" 
                               FontSize="12" 
                               Foreground="#7F8C8D"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Форма редактирования -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Название компании -->
                <Border Background="White"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Название компании *" 
                                   Foreground="#7F8C8D" 
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtName" 
                                 Padding="10"
                                 FontSize="14"
                                 BorderBrush="#E1E5EB"
                                 BorderThickness="1"/>
                    </StackPanel>
                </Border>

                <!-- Контактное лицо -->
                <Border Background="White"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Контактное лицо" 
                                   Foreground="#7F8C8D" 
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtContactPerson" 
                                 Padding="10"
                                 FontSize="14"
                                 BorderBrush="#E1E5EB"
                                 BorderThickness="1"/>
                    </StackPanel>
                </Border>

                <!-- Телефон -->
                <Border Background="White"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Телефон" 
                                   Foreground="#7F8C8D" 
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtPhone" 
                                 Padding="10"
                                 FontSize="14"
                                 BorderBrush="#E1E5EB"
                                 BorderThickness="1"/>
                    </StackPanel>
                </Border>

                <!-- Email -->
                <Border Background="White"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Email" 
                                   Foreground="#7F8C8D" 
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtEmail" 
                                 Padding="10"
                                 FontSize="14"
                                 BorderBrush="#E1E5EB"
                                 BorderThickness="1"/>
                    </StackPanel>
                </Border>

                <!-- Адрес -->
                <Border Background="White"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Адрес" 
                                   Foreground="#7F8C8D" 
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtAddress" 
                                 Padding="10"
                                 FontSize="14"
                                 BorderBrush="#E1E5EB"
                                 BorderThickness="1"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 MaxHeight="80"/>
                    </StackPanel>
                </Border>

                <!-- ИНН/Налоговый номер -->
                <Border Background="White"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="ИНН / Налоговый номер" 
                                   Foreground="#7F8C8D" 
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtTaxNumber" 
                                 Padding="10"
                                 FontSize="14"
                                 BorderBrush="#E1E5EB"
                                 BorderThickness="1"/>
                    </StackPanel>
                </Border>

                <!-- Статус -->
                <Border Background="White"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Статус" 
                                   Foreground="#7F8C8D" 
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                        <CheckBox x:Name="ChkIsActive" 
                                  Content="Поставщик активен"
                                  IsChecked="True"
                                  FontSize="14"/>
                    </StackPanel>
                </Border>

                <!-- Дата создания (только для просмотра) -->
                <Border x:Name="CreatedAtSection"
                        Background="White"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Дата добавления" 
                                   Foreground="#7F8C8D" 
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtCreatedAt" 
                                   FontSize="12"
                                   Foreground="#5D6D7E"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Панель кнопок -->
        <Border Grid.Row="2" 
                Background="White"
                CornerRadius="8"
                Padding="15"
                Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Кнопка удаления (только для существующих) -->
                <Button x:Name="BtnDelete" 
                        Grid.Column="0"
                        Content="🗑️ Удалить"
                        Background="#E74C3C"
                        Foreground="White"
                        Padding="15,10"
                        BorderThickness="0"
                        Margin="0,0,0,0"
                        Cursor="Hand"
                        HorizontalAlignment="Left"
                        Click="BtnDelete_Click"
                        Visibility="Collapsed"/>

                <!-- Кнопка отмена -->
                <Button x:Name="BtnCancel" 
                        Grid.Column="1"
                        Content="❌ Отмена"
                        Background="#95A5A6"
                        Foreground="White"
                        Padding="15,10"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,10,0"
                        Click="BtnCancel_Click"/>

                <!-- Кнопка сохранения -->
                <Button x:Name="BtnSave" 
                        Grid.Column="2"
                        Content="💾 Сохранить"
                        Background="#4A6FA5"
                        Foreground="White"
                        Padding="25,10"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BtnSave_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>