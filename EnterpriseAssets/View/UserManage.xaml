<Window x:Class="EnterpriseAssets.View.UserManage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnterpriseAssets.View"
        mc:Ignorable="d"
        Title="Управление пользователем" 
        Height="650" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F7FA"
        WindowStyle="SingleBorderWindow">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="White"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Аватар -->
                <Border Grid.Column="0"
                        Width="80" Height="80"
                        CornerRadius="40"
                        Margin="0,0,20,0">
                    <TextBlock Text="👤" 
                               FontSize="42"
                               Foreground="#4A6FA5"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <!-- Информация -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="UserFullName" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Foreground="#2C3E50"/>
                    <TextBlock x:Name="UserRole" 
                               FontSize="14" 
                               Foreground="#4A6FA5"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Форма редактирования -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Имя пользователя -->
                <Border Background="White"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Имя пользователя" 
                                   Foreground="#7F8C8D" 
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtUsername" 
                                 Padding="10"
                                 FontSize="14"
                                 BorderBrush="#E1E5EB"
                                 BorderThickness="1"/>
                    </StackPanel>
                </Border>

                <!-- Полное имя -->
                <Border Background="White"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Полное имя" 
                                   Foreground="#7F8C8D" 
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtFullName" 
                                 Padding="10"
                                 FontSize="14"
                                 BorderBrush="#E1E5EB"
                                 BorderThickness="1"/>
                    </StackPanel>
                </Border>

                <!-- Email -->
                <Border Background="White"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Email" 
                                   Foreground="#7F8C8D" 
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtEmail" 
                                 Padding="10"
                                 FontSize="14"
                                 BorderBrush="#E1E5EB"
                                 BorderThickness="1"/>
                    </StackPanel>
                </Border>

                <!-- Телефон -->
                <Border Background="White"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Телефон" 
                                   Foreground="#7F8C8D" 
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtPhone" 
                                 Padding="10"
                                 FontSize="14"
                                 BorderBrush="#E1E5EB"
                                 BorderThickness="1"/>
                    </StackPanel>
                </Border>

                <!-- Роль -->
                <Border Background="White"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Роль" 
                                   Foreground="#7F8C8D" 
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                        <ComboBox x:Name="CmbRole" 
                                  Padding="8"
                                  FontSize="14"
                                  BorderBrush="#E1E5EB"
                                  BorderThickness="1"
                                  DisplayMemberPath="name"/>
                    </StackPanel>
                </Border>

                <!-- Пароль (для нового пользователя или смены) -->
                <Border x:Name="PasswordSection" 
                        Background="White"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,0,15"
                        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Пароль" 
                                   Foreground="#7F8C8D" 
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                        <PasswordBox x:Name="TxtPassword" 
                                     Padding="8"
                                     FontSize="14"
                                     BorderBrush="#E1E5EB"
                                     BorderThickness="1"
                                     PasswordChar="●"/>
                        <TextBlock Text="Минимум 6 символов" 
                                   Foreground="#95A5A6" 
                                   FontSize="10"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Подтверждение пароля (для нового пользователя) -->
                <Border x:Name="ConfirmPasswordSection" 
                        Background="White"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,0,15"
                        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Подтверждение пароля" 
                                   Foreground="#7F8C8D" 
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                        <PasswordBox x:Name="TxtConfirmPassword" 
                                     Padding="8"
                                     FontSize="14"
                                     BorderBrush="#E1E5EB"
                                     BorderThickness="1"
                                     PasswordChar="●"/>
                    </StackPanel>
                </Border>

                <!-- Дополнительная информация -->
                <Border Background="White"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Дополнительная информация" 
                                   Foreground="#7F8C8D" 
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtCreatedAt" 
                                   FontSize="12"
                                   Foreground="#5D6D7E"
                                   Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtLastLogin" 
                                   FontSize="12"
                                   Foreground="#5D6D7E"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Панель кнопок -->
        <Border Grid.Row="2" 
                Background="White"
                CornerRadius="8"
                Padding="15"
                Margin="0,20,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Кнопка удаления -->
                <Button x:Name="BtnDelete" 
        Grid.Column="0"
        Content="🗑️ Удалить"
        Background="#E74C3C"
        Foreground="White"
        Padding="15,10"
        BorderThickness="0"
        Margin="0,0,0,0"
        Cursor="Hand"
        HorizontalAlignment="Left"
        Click="BtnDelete_Click"/>

                <!-- Кнопка смены пароля -->
                <Button x:Name="BtnChangePassword" 
        Grid.Column="1"
        Content="🔑 Сменить пароль"
        Background="#F39C12"
        Foreground="White"
        Padding="15,10"
        BorderThickness="0"
        Cursor="Hand"
        Margin="0,0,10,0"
        Click="BtnChangePassword_Click"/>

                <!-- Кнопка сохранения -->
                <Button x:Name="BtnSave" 
        Grid.Column="2"
        Content="💾 Сохранить"
        Background="#4A6FA5"
        Foreground="White"
        Padding="25,10"
        BorderThickness="0"
        Cursor="Hand"
        Click="BtnSave_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>