<Window x:Class="EnterpriseAssets.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnterpriseAssets.ViewModel"
        mc:Ignorable="d"
        Title="Учет активов предприятия - Авторизация" 
        Height="525" 
        Width="350"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA"
        ResizeMode="NoResize">

    <Window.DataContext>
        <local:LoginViewModel/>
    </Window.DataContext>

    <Grid>
        <!-- Основное содержимое окна (сначала идет оно) -->
        <Border Width="340" Height="480" CornerRadius="10" Background="White"
                BorderThickness="1" BorderBrush="#E1E5EB"
                VerticalAlignment="Center" HorizontalAlignment="Center">

            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" BlurRadius="15" Opacity="0.7"/>
            </Border.Effect>

            <StackPanel Margin="30" VerticalAlignment="Center">

                <!-- Заголовок -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,30">
                    <Viewbox Width="60" Height="80" Margin="0,0,0,0">
                        <Grid>
                            <Image Source="/Image/Enterpise0Logo.png" Stretch="Fill" Margin="0,350,0,0"/>
                        </Grid>
                    </Viewbox>

                    <TextBlock Text="Учет активов" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Foreground="#2C3E50"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Авторизация" 
                               FontSize="16" 
                               Foreground="#4A6FA5"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Поля ввода -->
                <StackPanel>
                    <!-- Логин -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Логин" Foreground="#5D6D7E" FontSize="13" Margin="0,0,0,5"/>
                        <Border CornerRadius="6" BorderThickness="1" BorderBrush="#D5DBE1" Background="White">
                            <TextBox x:Name="LoginBox" 
                                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                     BorderThickness="0" 
                                     Padding="12,10"
                                     FontSize="14"
                                     Background="Transparent"
                                     Foreground="#2C3E50"
                                     VerticalContentAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <!-- Пароль -->
                    <StackPanel Margin="0,0,0,25">
                        <TextBlock Text="Пароль" Foreground="#5D6D7E" FontSize="13" Margin="0,0,0,5"/>
                        <Border CornerRadius="6" BorderThickness="1" BorderBrush="#D5DBE1" Background="White">
                            <PasswordBox x:Name="PasswordBox" 
                                         PasswordChanged="PasswordBox_PasswordChanged"
                                         BorderThickness="0" 
                                         Padding="12,10"
                                         FontSize="14"
                                         Background="Transparent"
                                         VerticalContentAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <!-- Сообщение об ошибке (для ошибок входа) -->
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="#E74C3C" 
                               FontSize="12"
                               Margin="0,0,0,10"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               Visibility="{Binding ErrorMessage, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true}"/>

                    <!-- Кнопка входа -->
                    <Button Command="{Binding LoginCommand}"
                            Height="40"
                            Background="#4A6FA5"
                            BorderBrush="#4A6FA5"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,0,10"
                            IsEnabled="{Binding CanLogin}"
                            IsDefault="True">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#BDC3C7"/>
                                        <Setter Property="BorderBrush" Value="#BDC3C7"/>
                                        <Setter Property="Cursor" Value="Arrow"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#3A5A90"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#2A4A80"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <TextBlock Text="Войти" VerticalAlignment="Center"/>
                    </Button>

                    <!-- Кнопка выхода -->
                    <Button Command="{Binding CloseCommand}"
                            Height="30"
                            Background="Transparent"
                            BorderBrush="#E1E5EB"
                            Foreground="#7F8C8D"
                            FontSize="12"
                            BorderThickness="1"
                            Cursor="Hand">
                        <TextBlock Text="Выйти из программы"/>
                    </Button>
                </StackPanel>

                <!-- Футер -->
                <TextBlock Text="© Учет активов предприятия, 2026" 
                           Foreground="#bebcb7" 
                           FontSize="11"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,20"/>

            </StackPanel>
        </Border>

        <!-- Затемняющий слой с проверкой БД -->
        <Border x:Name="LoadingOverlay" 
                Background="#CC2C3E50"  
                CornerRadius="10"
                Visibility="Visible"
                Panel.ZIndex="10">
        
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                 <!--Анимация загрузки--> 
                <Grid Width="80" Height="80" Margin="0,0,0,20">
                    <Grid.Resources>
                        <Storyboard x:Key="PulseAnimation1" RepeatBehavior="Forever">
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Dot1" Storyboard.TargetProperty="Opacity">
                                <LinearDoubleKeyFrame Value="1" KeyTime="0:0:0"/>
                                <LinearDoubleKeyFrame Value="0.3" KeyTime="0:0:0.8"/>
                                <LinearDoubleKeyFrame Value="1" KeyTime="0:0:1.6"/>
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                        <Storyboard x:Key="PulseAnimation2" RepeatBehavior="Forever">
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Dot2" Storyboard.TargetProperty="Opacity">
                                <LinearDoubleKeyFrame Value="0.3" KeyTime="0:0:0"/>
                                <LinearDoubleKeyFrame Value="1" KeyTime="0:0:0.4"/>
                                <LinearDoubleKeyFrame Value="0.3" KeyTime="0:0:1.2"/>
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                        <Storyboard x:Key="PulseAnimation3" RepeatBehavior="Forever">
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Dot3" Storyboard.TargetProperty="Opacity">
                                <LinearDoubleKeyFrame Value="0.3" KeyTime="0:0:0"/>
                                <LinearDoubleKeyFrame Value="1" KeyTime="0:0:0.8"/>
                                <LinearDoubleKeyFrame Value="0.3" KeyTime="0:0:1.6"/>
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </Grid.Resources>

                    <Grid.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard Storyboard="{StaticResource PulseAnimation1}"/>
                            <BeginStoryboard Storyboard="{StaticResource PulseAnimation2}"/>
                            <BeginStoryboard Storyboard="{StaticResource PulseAnimation3}"/>
                        </EventTrigger>
                    </Grid.Triggers>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                     <!--Три пульсирующие точки--> 
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="0">
                        <Border x:Name="Dot1" Width="16" Height="16" CornerRadius="8" 
                Background="#4A6FA5" Margin="0,0,8,0" Opacity="1"/>
                        <Border x:Name="Dot2" Width="16" Height="16" CornerRadius="8" 
                Background="#4A6FA5" Margin="0,0,8,0" Opacity="0.3"/>
                        <Border x:Name="Dot3" Width="16" Height="16" CornerRadius="8" 
                Background="#4A6FA5" Opacity="0.3"/>
                    </StackPanel>

                     <!--Текст "Загрузка..." с эффектом печати--> 
                    <TextBlock x:Name="LoadingDotsText" 
               Text="Загрузка" 
               Foreground="White" 
               FontSize="12"
               HorizontalAlignment="Center"
               Grid.Row="1"
               Margin="0,10,0,0">
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <StringAnimationUsingKeyFrames Storyboard.TargetProperty="Text" Duration="0:0:1.5">
                                            <DiscreteStringKeyFrame Value="Загрузка." KeyTime="0:0:0"/>
                                            <DiscreteStringKeyFrame Value="Загрузка.." KeyTime="0:0:0.5"/>
                                            <DiscreteStringKeyFrame Value="Загрузка..." KeyTime="0:0:1"/>
                                            <DiscreteStringKeyFrame Value="Загрузка" KeyTime="0:0:1.5"/>
                                        </StringAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                </Grid>

                 <!--Текст статуса--> 
                <TextBlock x:Name="LoadingText" 
                           Text="Проверка подключения к базе данных..." 
                           Foreground="White"
                           FontSize="14"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                 <!--Кнопка повторной попытки (изначально скрыта)--> 
                <Button x:Name="RetryButton" 
                        Content="🔄 Повторить попытку"
                        Background="#4A6FA5"
                        Foreground="White"
                        Padding="15,8"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="RetryButton_Click"
                        Visibility="Collapsed"
                        Width="200"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>