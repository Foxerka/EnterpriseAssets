<Window x:Class="EnterpriseAssets.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnterpriseAssets.ViewModel"
        mc:Ignorable="d"
        Title="Учет активов предприятия - Авторизация" 
        Height="500" 
        Width="350"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA"
        ResizeMode="NoResize">

    <Window.DataContext>
        <local:LoginViewModel/>
    </Window.DataContext>

    <Grid>
        <Border Width="340" Height="480" CornerRadius="10" Background="White"
                BorderThickness="1" BorderBrush="#E1E5EB"
                VerticalAlignment="Center" HorizontalAlignment="Center">

            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" BlurRadius="15" Opacity="0.7"/>
            </Border.Effect>

            <StackPanel Margin="30" VerticalAlignment="Center">

                <!-- Заголовок -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,30">
                    <Viewbox Width="60" Height="80" Margin="0,0,0,0">
                        <Grid>
                            <Image Source="/Image/Enterpise0Logo.png" Stretch="Fill" Margin="0,350,0,0"/>
                        </Grid>
                    </Viewbox>

                    <TextBlock Text="Учет активов" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Foreground="#2C3E50"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Авторизация" 
                               FontSize="16" 
                               Foreground="#4A6FA5"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Поля ввода -->
                <StackPanel>
                    <!-- Логин -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Логин" Foreground="#5D6D7E" FontSize="13" Margin="0,0,0,5"/>
                        <Border CornerRadius="6" BorderThickness="1" BorderBrush="#D5DBE1" Background="White">
                            <TextBox x:Name="LoginBox" 
                                     Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                                     BorderThickness="0" 
                                     Padding="12,10"
                                     FontSize="14"
                                     Background="Transparent"
                                     Foreground="#2C3E50"
                                     VerticalContentAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <!-- Пароль -->
                    <StackPanel Margin="0,0,0,25">
                        <TextBlock Text="Пароль" Foreground="#5D6D7E" FontSize="13" Margin="0,0,0,5"/>
                        <Border CornerRadius="6" BorderThickness="1" BorderBrush="#D5DBE1" Background="White">
                            <PasswordBox x:Name="PasswordBox" 
                                         PasswordChanged="PasswordBox_PasswordChanged"
                                         BorderThickness="0" 
                                         Padding="12,10"
                                         FontSize="14"
                                         Background="Transparent"
                                         VerticalContentAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <!-- Сообщение об ошибке -->
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="#E74C3C" 
                               FontSize="12"
                               Margin="0,0,0,10"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               Visibility="{Binding ErrorMessage, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true}"/>

                    <!-- Индикатор загрузки -->
                    <Border Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                            Background="#F8F9FA"
                            CornerRadius="6"
                            Margin="0,0,0,10"
                            Padding="10">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="Проверка данных..." 
                                       Foreground="#5D6D7E" 
                                       FontSize="12"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Кнопка входа -->
                    <Button Command="{Binding LoginCommand}"
                            Height="40"
                            Background="#4A6FA5"
                            BorderBrush="#4A6FA5"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,0,10">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#BDC3C7"/>
                                        <Setter Property="BorderBrush" Value="#BDC3C7"/>
                                        <Setter Property="Cursor" Value="Arrow"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#3A5A90"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#2A4A80"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <TextBlock Text="Войти" VerticalAlignment="Center"/>
                    </Button>

                    <!-- Кнопка выхода -->
                    <Button Command="{Binding CloseCommand}"
                            Height="30"
                            Background="Transparent"
                            BorderBrush="#E1E5EB"
                            Foreground="#7F8C8D"
                            FontSize="12"
                            BorderThickness="1"
                            Cursor="Hand">
                        <TextBlock Text="Выйти из программы"/>
                    </Button>
                </StackPanel>

                <!-- Футер -->
                <TextBlock Text="© Учет активов предприятия, 2024" 
                           Foreground="#95A5A6" 
                           FontSize="11"
                           HorizontalAlignment="Center"
                           Margin="0,25,0,0"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>